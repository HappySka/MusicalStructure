<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_bar_height"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/menu_album"
        style="@style/menu_item"
        android:drawableTop="@drawable/album_icon"
        android:text="@string/albums" />

    <TextView
        android:id="@+id/menu_song_list"
        style="@style/menu_item"
        android:drawableTop="@drawable/song_list"
        android:text="@string/songs" />

    <TextView
        android:id="@+id/menu_playing"
        style="@style/menu_item"
        android:drawableTop="@drawable/playing"
        android:text="@string/now_playing" />

</LinearLayout>
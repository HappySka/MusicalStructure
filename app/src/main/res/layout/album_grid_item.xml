<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="@dimen/album_grid_item_size"
        android:layout_height="@dimen/album_grid_item_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_album_art" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_art"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/album_name_padding"
        android:textColor="@color/colorStrongAccent"
        android:textSize="@dimen/album_name_text_size"
        tools:text="Album Name" />

</RelativeLayout>